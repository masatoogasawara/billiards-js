{
  "scripts": {
    "reset": "rm -R ./node_modules ; rm ./package-lock.json ; npm i",
    "dev": "babel ./src/billiards.js --presets=env --watch --out-file $MMDST/billiards-js/billiards.min.js",
    "build": "rimraf $MMDST/billiards-js && cpx './src/**/*.html' $MMDST/billiards-js && babel ./src/billiards.js --presets=env --out-file ./src/billiards.min.js && google-closure-compiler --js=./src/billiards.min.js --js_output_file=$MMDST/billiards-js/billiards.min.js"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-preset-env": "^1.7.0",
    "cpx": "^1.5.0",
    "google-closure-compiler": "^20180805.0.0",
    "rimraf": "^2.6.2"
  }
}
